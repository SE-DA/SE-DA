<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="mrp_production_form_view_dvlr" model="ir.ui.view">
            <field name="name">mrp_production_form_view_dvlr</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="priority">1666</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="after">
                    <field name="sol_id" invisible="1"/>
                    <field name="so_id" invisible="1"/>
                    <field name="lead_id"/>
                    <field name="owner_id"/>
                </xpath>

            </field>
        </record>

    <record id="mrp_bom_line_view_form_dvlr" model="ir.ui.view">
            <field name="name">mrp.bom.line.view.form.dvlr</field>
            <field name="model">mrp.bom.line</field>
            <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
            <field name="priority">1666</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="lot_id" domain="['&amp;','&amp;','&amp;',('product_id','=',product_id),('owner_id','=',parent.owner_id),('lead_id','=',parent.lead_id),('positive_q','=',True)]"/>
                </xpath>

            </field>
        </record>

    <record id="mrp_bom_form_view_dvlr" model="ir.ui.view">
            <field name="name">mrp.bom.form.view.dvlr</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="priority">1666</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="owner_id"/>
                    <field name="lead_id" domain="[('partner_id', '=',owner_id )]"/>
                </xpath>
                <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="after">
                    <field name="lot_id" domain="['&amp;','&amp;','&amp;',('product_id','=',product_id),('owner_id','=',parent.owner_id),('lead_id','=',parent.lead_id),('positive_q','=',True)]"/>
                </xpath>

            </field>
        </record>
</odoo>


