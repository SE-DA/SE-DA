<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="stock_production_lot_dvlr" model="ir.ui.view">
        <field name="name">stock.production.lot.dvlr</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']/group/field[@name='ref']" position="after">
                <field name="lead_id" domain="[('partner_id', '=',owner_id )]" options="{'no_create': True,}"/>
                <field name="owner_id" readonly="0"/>
            </xpath>
        </field>
    </record>


    <record id="stock_production_lot_tree_dvlr" model="ir.ui.view">
        <field name="name">stock.production.lot.tree.dvlr</field>
        <field name="model">stock.production.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="lead_id" readonly="1"/>
                <field name="owner_id" readonly="1"/>
            </xpath>
        </field>
    </record>



